<h2 class="page-header"><%= tree.tree_name %></h2>
<div class="book-details">
  <div>
    <img class="book-cover" src="<%= tree.coverImagePath %>">
    <div class="book-details-btn-grid">
      <a class="btn btn-primary" href="/trees/<%= tree.id %>/edit">Edit</a>
      <%- include('../partials/deleteForm', { url: `/trees/${tree.id}` }) %>
      <a class="btn btn-primary book-details-author-button" href="/categories/<%= tree.category.id %>">View Category</a>
    </div>
  </div>
  <div class="book-details-grid">
    <div class="book-details-label">Family (Genus):</div>
    <div><%= tree.category.name %></div>
    <div class="book-details-label">Tree Description:</div>
    <div><%= tree.description %></div>
  </div>
</div>